# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# PostgreSQL Configuration
SINGLE_AUTH_DB_HOST=single-auth-postgres-db.leetcoders.uz
SINGLE_AUTH_DB_PORT=5500
SINGLE_AUTH_DB_USER=single_auth
SINGLE_AUTH_DB_PASSWORD=single_auth_secret_password
SINGLE_AUTH_DB_NAME=single_auth_service_db
SINGLE_AUTH_DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
SINGLE_AUTH_REDIS_HOST==single-auth-redis-db.leetcoders.uz
SINGLE_AUTH_REDIS_PORT=6600
SINGLE_AUTH_REDIS_PASSWORD=single-auth-redis-pwd
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# JWT Configuration
JWT_ISSUER=http://localhost:8080
JWT_ACCESS_TOKEN_TTL=10m
JWT_REFRESH_TOKEN_TTL=168h
JWT_ID_TOKEN_TTL=1h
JWT_AUTH_CODE_TTL=10m
JWT_KEY_ROTATION_INTERVAL=24h
JWT_KEY_VALIDITY_PERIOD=168h

# Argon2 Password Hashing
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4
ARGON2_SALT_LENGTH=16
ARGON2_KEY_LENGTH=32

# Session Management
MAX_DEVICES_PER_USER=10

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TOKEN_LENGTH=32
SECURE_COOKIES=false
COOKIE_DOMAIN=localhost
COOKIE_SAME_SITE=Lax
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
